# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                       controllers.Application.index
GET         /notes                  controllers.Application.listNotes()
POST        /notes                  controllers.Application.createNote()
GET         /note/:id               controllers.Application.showNote(id:java.util.UUID)
POST        /note/:id               controllers.Application.updateNote(id:java.util.UUID)
GET         /note/delete/:id        controllers.Application.deleteNote(id:java.util.UUID)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.at(path="/public", file)

    